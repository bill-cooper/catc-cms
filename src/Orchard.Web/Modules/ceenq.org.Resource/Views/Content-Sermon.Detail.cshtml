@using Orchard.Utility.Extensions;
@using ceenq.org.Resource.Models
@{
    if (Model.Title != null)
    {
        Layout.Title = Model.Title;
    }

    var contentTypeClassName = ((string)Model.ContentItem.ContentType).HtmlClassify();

    var resourcePart = (ResourcePart)Model.ContentItem.Get(typeof(ResourcePart));
}
<article class="post post-page content-item @contentTypeClassName">
    <header>
        @Display(Model.Header)
    </header>
    <div class="post-meta">
        <span>
            @resourcePart.DeliveredUtc.Value.ToShortDateString()</span>
        @if (Model.Meta != null)
        {
            @Display(Model.Meta)
        }
    </div>
    @Display(Model.Content)
    @if (Model.Footer != null)
    {
        <footer>
            @Display(Model.Footer)
        </footer>
    }
</article>
